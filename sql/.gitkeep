/* 
Sakila Data Warehouse (ETL + OLAP Modeling)
ETL Load Simulation - Example SQL

Goal:
- Simulate an ETL step that populates a simple fact table from Sakila source tables.
- This is portfolio-friendly even if you no longer have the original laptop files.

Assumptions:
- Source schema tables exist (Sakila): payment, rental, inventory, film, customer, store, staff
- Target tables below are created in a warehouse schema (you can run in a sandbox DB)
*/

-- =========================
-- 1) Target tables (warehouse)
-- =========================

-- Dimension: Date (minimal)
CREATE TABLE IF NOT EXISTS dim_date (
  date_key        INT PRIMARY KEY,          -- YYYYMMDD
  full_date       DATE NOT NULL,
  year_num        INT NOT NULL,
  month_num       INT NOT NULL,
  day_num         INT NOT NULL
);

-- Dimension: Customer (minimal)
CREATE TABLE IF NOT EXISTS dim_customer (
  customer_key    INT PRIMARY KEY,          -- surrogate or reuse customer_id for demo
  customer_id     INT NOT NULL,
  store_id        INT NOT NULL,
  active          INT NOT NULL
);

-- Dimension: Film (minimal)
CREATE TABLE IF NOT EXISTS dim_film (
  film_key        INT PRIMARY KEY,          -- surrogate or reuse film_id for demo
  film_id         INT NOT NULL,
  title           VARCHAR(255) NOT NULL,
  rating          VARCHAR(10)
);

-- Fact: Orders / Payments fact
CREATE TABLE IF NOT EXISTS fact_orders (
  order_fact_id   BIGINT PRIMARY KEY AUTO_INCREMENT,
  date_key        INT NOT NULL,
  customer_key    INT NOT NULL,
  film_key        INT NOT NULL,
  store_id        INT NOT NULL,
  staff_id        INT NOT NULL,
  rental_id       INT NOT NULL,
  payment_id      INT NOT NULL,
  amount          DECIMAL(10,2) NOT NULL,

  -- Basic constraints for demo
  CONSTRAINT fk_fact_date     FOREIGN KEY (date_key)     REFERENCES dim_date(date_key),
  CONSTRAINT fk_fact_customer FOREIGN KEY (customer_key) REFERENCES dim_customer(customer_key),
  CONSTRAINT fk_fact_film     FOREIGN KEY (film_key)     REFERENCES dim_film(film_key)
);

-- Helpful indexes for OLAP-style queries
CREATE INDEX IF NOT EXISTS idx_fact_date       ON fact_orders(date_key);
CREATE INDEX IF NOT EXISTS idx_fact_customer   ON fact_orders(customer_key);
CREATE INDEX IF NOT EXISTS idx_fact_store_date ON fact_orders(store_id, date_key);


-- =========================
-- 2) Populate dimensions
-- =========================

/* Date dimension from payment_date */
INSERT IGNORE INTO dim_date (date_key, full_date, year_num, month_num, day_num)
SELECT
  (YEAR(p.payment_date) * 10000) + (MONTH(p.payment_date) * 100) + DAY(p.payment_date) AS date_key,
  DATE(p.payment_date) AS full_date,
  YEAR(p.payment_date) AS year_num,
  MONTH(p.payment_date) AS month_num,
  DAY(p.payment_date) AS day_num
FROM payment p;

/* Customer dimension */
INSERT IGNORE INTO dim_customer (customer_key, customer_id, store_id, active)
SELECT
  c.customer_id AS customer_key,
  c.customer_id,
  c.store_id,
  c.active
FROM customer c;

/* Film dimension via inventory -> film */
INSERT IGNORE INTO dim_film (film_key, film_id, title, rating)
SELECT
  f.film_id AS film_key,
  f.film_id,
  f.title,
  f.rating
FROM film f;


-- =========================
-- 3) Populate fact table (ETL simulation)
-- =========================

/*
Join path:
payment -> rental -> inventory -> film
payment -> customer, staff
*/
INSERT INTO fact_orders (
  date_key, customer_key, film_key, store_id, staff_id, rental_id, payment_id, amount
)
SELECT
  (YEAR(p.payment_date) * 10000) + (MONTH(p.payment_date) * 100) + DAY(p.payment_date) AS date_key,
  c.customer_id AS customer_key,
  f.film_id     AS film_key,
  c.store_id,
  p.staff_id,
  r.rental_id,
  p.payment_id,
  p.amount
FROM payment p
JOIN customer c   ON c.customer_id = p.customer_id
JOIN rental r     ON r.rental_id   = p.rental_id
JOIN inventory i  ON i.inventory_id = r.inventory_id
JOIN film f       ON f.film_id = i.film_id;

-- =========================
-- 4) Quick validation queries
-- =========================

-- Row counts
SELECT 'dim_date' AS table_name, COUNT(*) AS row_count FROM dim_date
UNION ALL
SELECT 'dim_customer', COUNT(*) FROM dim_customer
UNION ALL
SELECT 'dim_film', COUNT(*) FROM dim_film
UNION ALL
SELECT 'fact_orders', COUNT(*) FROM fact_orders;

-- Example OLAP query: revenue by month
SELECT
  d.year_num,
  d.month_num,
  SUM(o.amount) AS total_revenue
FROM fact_orders o
JOIN dim_date d ON d.date_key = o.date_key
GROUP BY d.year_num, d.month_num
ORDER BY d.year_num, d.month_num;

